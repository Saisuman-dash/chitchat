{
  "name": "chitchat",
  "private": true,
  "scripts": {
    "build": "turbo run build",
    "dev": "turbo run dev",
    "lint": "turbo run lint",
    "format": "prettier --write \"**/*.{ts,tsx,md}\"",
    "check-types": "turbo run check-types",
    "build:web": "turbo run build --filter=web",
    "build:server": "turbo run build --filter=server"
  },
  "devDependencies": {
    "prettier": "^3.5.3",
    "tsc-watch": "^6.3.1",
    "turbo": "^2.5.3",
    "typescript": "5.8.2"
  },
  "engines": {
    "node": ">=18"
  },
  "packageManager": "npm@10.9.1",
  "workspaces": [
    "apps/*",
    "packages/*"
  ],
  "dependencies": {
    "emoji-picker-react": "^4.12.3"
  }
}
